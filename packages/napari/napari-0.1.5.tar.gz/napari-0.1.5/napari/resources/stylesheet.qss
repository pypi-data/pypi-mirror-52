QtMoveBackButton {
   image: url(":/icons/{{ folder }}/move_back.svg");
}

QtMoveFrontButton {
   image: url(":/icons/{{ folder }}/move_front.svg");
}

QtDeleteShapeButton {
   image: url(":/icons/{{ folder }}/delete_shape.svg");
}

