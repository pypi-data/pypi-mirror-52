QtModeButton[mode="paint"]::indicator {
  image: url(":/icons/{{ folder }}/paint.svg");
}

QtModeButton[mode="fill"]::indicator {
  image: url(":/icons/{{ folder }}/fill.svg");
}

QtModeButton[mode="picker"]::indicator {
