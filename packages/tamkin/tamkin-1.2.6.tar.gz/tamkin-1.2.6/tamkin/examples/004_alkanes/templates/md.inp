&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARM_FILE_NAME ../../par_all34_ethers.prm
      PARMTYPE CHM
    &END FORCEFIELD
    &POISSON
      POISSON_SOLVER ANALYTIC
      PERIODIC NONE
      &EWALD
        EWALD_TYPE NONE
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC [angstrom] 30 30 30
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME ../opt.xyz
      CONN_FILE_FORMAT UPSF
      CONN_FILE_NAME ../init.psf
      EXCLUDE_VDW 1-3
      &CENTER_COORDINATES T
      &END
    &END TOPOLOGY
    &KIND CC33A
      ELEMENT C
    &END KIND
    &KIND CC32A
      ELEMENT C
    &END KIND
    &KIND HCA3
      ELEMENT H
    &END KIND
    &KIND HCA2
      ELEMENT H
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT md
  RUN_TYPE MD
  PRINT_LEVEL SILENT
&END GLOBAL
&MOTION
  &MD
    TEMPERATURE 600
    ENSEMBLE NVE
    STEPS 10000
    TIMESTEP 1.0
    ANGVEL_ZERO
    &THERMOSTAT
      &NOSE
        TIMECON 500
        LENGTH 3
      &END NOSE
    &END THERMOSTAT
    &PRINT
      &ENERGY
        &EACH
          MD 10
        &END EACH
      &END ENERGY
    &END PRINT
  &END MD
  &PRINT
    &TRAJECTORY
      &EACH
        MD 10
      &END EACH
    &END TRAJECTORY
    &RESTART OFF
    &END RESTART
    &RESTART_HISTORY OFF
    &END RESTART_HISTORY
  &END PRINT
&END MOTION

